<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:text="@string/enter_pin"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pinCirclesContainer"
            android:orientation="horizontal"
            android:layout_margin="@dimen/standart_margin"/>

        <GridLayout
            android:id="@+id/pinButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"

            android:columnCount="3"
            android:orientation="horizontal"
            android:useDefaultMargins="true">
            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="3"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="4"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="5"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="6"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="7"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="8"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="9"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/pinButtonFingerPrint"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_fingerprint_1"
                android:background="@android:color/transparent"/>

            <RelativeLayout
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pin_button"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/Blue"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:text="0"/>
            </RelativeLayout>

            <ImageButton
                android:id="@+id/pinButtonBack"
                android:layout_width="@dimen/pinButtonSize"
                android:layout_height="@dimen/pinButtonSize"
                android:src="@drawable/ic_left_arrow_1"
                android:background="@android:color/transparent"/>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>